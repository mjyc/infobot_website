    <h4 class="modal-title" style="color: white;">ERROR</h3>
  </div>
  <div class="modal-body">
    {{errorModalMsg}}
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" ng-enter="ok();" ng-click="ok()">OK</button>
  </div>
